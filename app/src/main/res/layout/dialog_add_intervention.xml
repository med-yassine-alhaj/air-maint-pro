<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Intervention Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type d'intervention *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Sélectionner un type"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Aircraft Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avion *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Choisir un avion"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteAvion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/card_text"
                android:textColorHint="#757575"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Technician Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technicien *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Sélectionner un technicien"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTechnicien"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/card_text"
                android:textColorHint="#757575"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durée (heures)"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Ex: 2.5"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDuree"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="numberDecimal"
                android:text="0.0"
                android:paddingVertical="16dp"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Problem Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description du problème"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Décrivez le problème..."
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDescriptionProbleme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top|start"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statut"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Choisir un statut"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteStatut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="none"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:paddingVertical="16dp"
                android:paddingStart="16dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Planifiée"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date d'intervention"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/buttonSelectDate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:text="Sélectionner la date"
            android:backgroundTint="@color/main"
            android:textColor="@color/main_text"
            android:textSize="16sp"
            android:paddingVertical="12dp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/textViewSelectedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non sélectionnée"
            android:textSize="14sp"
            android:textColor="@color/muted_text"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:background="@color/input_bg"
            android:layout_marginBottom="8dp"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Champs obligatoires"
            android:textSize="12sp"
            android:textColor="@color/muted_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</ScrollView>