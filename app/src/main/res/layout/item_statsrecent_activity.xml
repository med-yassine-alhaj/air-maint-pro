<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/stat_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtActivityTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Intervention #001"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <!-- Status badge with curved corners -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusBadgeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:strokeWidth="0dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="#FFF3E0">

                <TextView
                    android:id="@+id/txtActivityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complété"
                    android:textColor="#000000"
                    android:textSize="12sp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/txtActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Il y a 2h"
        android:textColor="#777777"
        android:textSize="12sp"
        android:layout_marginTop="4dp"/>

</LinearLayout>