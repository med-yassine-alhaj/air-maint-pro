<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="18dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/brand_outline"
    app:cardBackgroundColor="@color/brand_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_manage"
                android:contentDescription="Technicien"
                android:padding="10dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Techniciens.Circle"
                app:strokeColor="@color/brand_outline"
                app:strokeWidth="1dp"
                android:background="@color/brand_primary_container" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/brand_on_surface"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSpecialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/brand_on_surface_variant"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAvailability"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                app:chipIcon="@android:drawable/ic_menu_today"
                app:chipIconTint="@color/brand_on_primary_container"
                app:chipBackgroundColor="@color/brand_primary_container" />
        </LinearLayout>

        <TextView
            android:id="@+id/textExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/brand_on_surface"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/brand_on_surface_variant"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            android:baselineAligned="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAssign"
                style="@style/Widget.Techniciens.Button.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affecter"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                style="@style/Widget.Techniciens.Button.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/edit_technician"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                style="@style/Widget.Techniciens.Button.Tonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/delete_technician"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
