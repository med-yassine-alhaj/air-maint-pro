<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Techniciens" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorPrimaryContainer">@color/brand_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/brand_on_primary_container</item>

        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>
        <item name="colorSecondaryContainer">@color/brand_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/brand_on_secondary_container</item>

        <item name="colorTertiary">@color/brand_tertiary</item>
        <item name="colorOnTertiary">@color/brand_on_tertiary</item>

        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/brand_on_surface</item>
        <item name="colorSurfaceVariant">@color/brand_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/brand_on_surface_variant</item>
        <item name="colorOutline">@color/brand_outline</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Components -->
        <item name="materialCardViewStyle">@style/Widget.Techniciens.Card</item>
        <item name="materialButtonStyle">@style/Widget.Techniciens.Button</item>
        <item name="textInputStyle">@style/Widget.Techniciens.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.Techniciens.Toolbar</item>
    </style>

    <style name="Theme.Techniciens" parent="Base.Theme.Techniciens" />

    <style name="Widget.Techniciens.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/brand_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.Techniciens.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Widget.Techniciens.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/brand_on_surface_variant</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <style name="Widget.Techniciens.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/brand_surface</item>
        <item name="titleCentered">true</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Local fallbacks for missing Material3 overlays/styles on older libs -->
    <style name="ShapeAppearanceOverlay.Techniciens.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Alias to handle references without the Circle suffix -->
    <style name="ShapeAppearanceOverlay.Techniciens" parent="ShapeAppearanceOverlay.Techniciens.Circle" />

    <style name="Widget.Techniciens.Button.Tonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/brand_primary_container</item>
        <item name="iconTint">@color/brand_on_primary_container</item>
        <item name="android:textColor">@color/brand_on_primary_container</item>
    </style>
</resources>