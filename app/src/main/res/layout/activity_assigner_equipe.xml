<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg">

    <!-- Informations du vol -->
    <TextView
        android:id="@+id/tvVolInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/rounded_border_light"
        android:layout_marginBottom="16dp" />

    <!-- Message si aucune équipe -->
    <TextView
        android:id="@+id/tvAucuneEquipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aucune équipe disponible pour assignation.\n\nLes équipes doivent:\n• Être disponibles (statut: Disponible)\n• Avoir une composition complète\n• Ne pas être déjà assignées à un vol"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- Liste des équipes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEquipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp" />

    <!-- Bouton retour -->
    <Button
        android:id="@+id/btnRetour"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Retour"
        android:backgroundTint="@color/gray"
        android:textColor="@color/text"
        android:textSize="16sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/border"
        app:strokeWidth="1dp" />

</LinearLayout>