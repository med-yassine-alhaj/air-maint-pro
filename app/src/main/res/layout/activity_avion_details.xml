<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header avec immatriculation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary_color"
            android:padding="24dp"
            app:cornerRadius="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvImmatriculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F-GABC"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvEtat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En service"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_etat_actif"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Informations détaillées -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Modèle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_airplane"
                        app:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modèle"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvModele"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Airbus A320"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_type"
                        app:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avion de ligne"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Compagnie -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_company"
                        android:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Compagnie"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvCompagnie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Air France"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Heures de vol -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"
                        android:tint="#2196F3"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Heures de vol"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D" />

                        <TextView
                            android:id="@+id/tvHeuresVol"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1500 h"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dernière révision -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dernière révision"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDerniereRevision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prochaine révision"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvProchaineRevision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/07/2024"
                    android:textSize="16sp"
                    android:textColor="#E74C3C" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Description -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aucune description"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnQrCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QR Code"
                android:drawableStart="@drawable/ic_qr_code"
                android:drawablePadding="8dp"
                android:backgroundTint="#3498DB"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnInterventions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interventions"
                android:drawableStart="@drawable/ic_tools"
                android:drawablePadding="8dp"
                android:backgroundTint="#2ECC71"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Boutons modifier/supprimer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:backgroundTint="#F39C12"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supprimer"
                android:backgroundTint="#E74C3C"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>