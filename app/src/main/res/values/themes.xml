<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.AirMaintPro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here -->
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@color/bg</item>

        <!-- For dialogs -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Dialog theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/main</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:background">@color/bg</item>
    </style>

    <!-- For splash screen or other screens -->
    <style name="Theme.AirMaintPro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- For dialogs without action bar -->
    <style name="Theme.AirMaintPro.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/main</item>
        <item name="colorAccent">@color/main</item>
    </style>
</resources>