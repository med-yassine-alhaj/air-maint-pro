<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/card_bg"
    android:elevation="1dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/single_wrench"
            android:contentDescription="Part"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/textPartDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part description"
                android:textSize="14sp"
                android:textColor="@color/muted_text"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonDeletePart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete part"
            app:tint="@color/error" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: "
            android:textSize="14sp"
            android:textColor="@color/muted_text" />

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/scale"
            android:contentDescription="Weight"
            app:tint="@color/muted_text"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/textWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 kg"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="14sp"
            android:textColor="@color/muted_text" />

        <TextView
            android:id="@+id/textUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:layout_marginEnd="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ea"
            android:textSize="14sp"
            android:textColor="@color/muted_text" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:id="@+id/textPartTotal" />

</LinearLayout>








