<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un Avion"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Immatriculation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Immatriculation *"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etImmatriculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: F-GABC"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- Modèle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modèle *"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etModele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Airbus A320"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type *"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Avion de ligne, Jet privé"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- Compagnie -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compagnie"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etCompagnie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Air France"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- État -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="État *"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etEtat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cliquez pour sélectionner"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp" />

        <!-- Heures de vol -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heures de vol"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etHeuresVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 1500"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes ou informations supplémentaires"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="5"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="24dp" />

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Annuler"
                android:backgroundTint="#95A5A6"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enregistrer"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>