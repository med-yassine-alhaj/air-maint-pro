<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp">
        <!-- Titre (avec ID pour pouvoir le changer) -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¨â€ðŸ”§ Formulaire Technicien"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#3700B3"/>


        <!-- PrÃ©nom -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrÃ©nom *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Jean"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- Nom -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Dupont"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: jean.dupont@airmaint.com"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- TÃ©lÃ©phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ©lÃ©phone *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: +33 6 12 34 56 78"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="phone"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- DÃ©partement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DÃ©partement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/departmentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Maintenance Structure"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- RÃ´le -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RÃ´le"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/roleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: Technicien"
            android:textColor="#212121"
            android:textColorHint="#757575"
            android:inputType="text"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"/>

        <!-- Statut -->
        <CheckBox
            android:id="@+id/activeCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compte actif"
            android:textColor="#212121"
            android:checked="true"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:padding="8dp"/>

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Annuler -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Annuler"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:background="#FF6B6B"/>

            <!-- Sauvegarder -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Sauvegarder"
                android:textColor="@android:color/white"
                android:background="#3700B3"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>