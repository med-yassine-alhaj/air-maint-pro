<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Titre -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouvelle Ã‰quipe"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp" />

        <!-- Nom de l'Ã©quipe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom de l'Ã©quipe *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Ex: Ã‰quipe Alpha"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomEquipe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="textCapWords"
                android:maxLength="50"
                android:paddingVertical="16dp"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Code de l'Ã©quipe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code de l'Ã©quipe *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:minHeight="56dp"
            android:hint="Ex: ALPHA (2-10 caractÃ¨res)"
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCodeEquipe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:minHeight="50dp"
                android:inputType="textCapCharacters"
                android:maxLength="10"
                android:paddingVertical="16dp"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Description de l'Ã©quipe..."
            app:hintTextColor="@color/muted_text"
            app:boxStrokeColor="@color/border"
            app:boxStrokeWidthFocused="2dp"
            app:boxBackgroundColor="@color/input_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top|start"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textColor="@color/card_text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Section Membres -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membres de l'Ã©quipe *"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Compteur et statut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvMembreCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0 / 6 membres"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvCompositionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš  SÃ©lectionnez des membres"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Membres sÃ©lectionnÃ©s -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membres sÃ©lectionnÃ©s:"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutMembresSelectionnes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_border"
            android:padding="8dp"
            android:minHeight="100dp" />

        <!-- Liste des membres disponibles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membres disponibles:"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMembres"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_border"
            android:padding="8dp" />

        <!-- Information composition -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Composition minimale requise:"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€¢ 1 Pilote (ou Commandant de bord)\nâ€¢ 1 Copilote\nâ€¢ 2 Personnels de cabine (HÃ´tesse/Steward/Chef de cabine)\nâ€¢ 0-2 Techniciens (IngÃ©nieur de vol/MÃ©canicien navigant)\n\nMaximum: 6 membres par Ã©quipe"
            android:textSize="13sp"
            android:textColor="@color/muted_text"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Champs obligatoires -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Champs obligatoires"
            android:textSize="12sp"
            android:textColor="@color/muted_text"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Annuler"
                android:backgroundTint="@color/gray"
                android:textColor="@color/text"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/border"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Enregistrer"
                android:backgroundTint="@color/main"
                android:textColor="@color/main_text"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>