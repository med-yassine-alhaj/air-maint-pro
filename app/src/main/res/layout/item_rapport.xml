<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Row with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_stat_rappots"
             />

            <TextView
                android:id="@+id/tvRapportTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rapport mensuel - Octobre 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

        </LinearLayout>

        <!-- Generation Date Row with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_rapport_calendar" />

            <TextView
                android:id="@+id/tvRapportDate"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:text="01/11/2025 14:30"
                android:textColor="#666"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Type and Status Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Type Badge -->
            <TextView
                android:id="@+id/tvRapportType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintenance"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="8dp"/>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvRapportStatut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminé"
                android:textSize="12sp"
                android:textColor="#000000"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"/>

        </LinearLayout>

        <!-- Period (if exists) -->
        <TextView
            android:id="@+id/tvRapportPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Période: 01/10/2025 - 31/10/2025"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>