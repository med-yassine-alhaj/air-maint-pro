<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/card_bg"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Retour" />

            <TextView
                android:id="@+id/textInterventionId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INT-001"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:gravity="center_vertical"
                android:paddingStart="8dp" />

            <ImageView
                android:id="@+id/imageCompletionStatus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/checkbox_on_background"
                android:visibility="gone"
                android:contentDescription="Statut" />
        </LinearLayout>

        <!-- Status badges -->
        <LinearLayout
            android:id="@+id/layoutStatusBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="En cours"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Corrective"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tab Navigation -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/secondary"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/tabInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/tab_background_selected"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/card_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabRemarques"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/tab_background_unselected"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarques"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/muted_text" />

            <ImageView
                android:id="@+id/iconRemarquesCheck"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/checkbox_on_background"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                android:tint="@color/status_done" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabSolution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/tab_background_unselected"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solution"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/muted_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/tab_background_unselected"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fermer"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/muted_text" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" />
    </ScrollView>

</LinearLayout>


