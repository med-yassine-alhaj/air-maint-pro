<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer un Technicien"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Nom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le nom"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Prénom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prénom *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPrenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le prénom"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="exemple@entreprise.com"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Mot de passe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mot de passe *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum 6 caractères"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Âge -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Âge *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entre 18 et 65 ans"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Département -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Département *"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spDepartement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Bouton Créer -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer le Technicien"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>